{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",          // added for path resolution
    "paths": {               // optional if you use aliases
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "eslint.config.mjs"]
}